CC = gcc
SRC = main.c school.c
OBJ = $(patsubst %.c, %.o, $(SRC))
NAME = school
RM = rm -f

CFLAGS = $(echo "-Wall -Werror -Wextra -pedantic")

all:$(OBJ)
	$(CC) $(OBJ) -o $(NAME)
	$(echo $(OBJ | grep '.o' )) : $(echo $(SRC) | grep '.c')
	$(CC) $(CFLAGS) -c -o $@ $?
clean:
	$(RM) *~ $(NAME)
	$(RM) -f .*~ $(NAME)
	$(RM) -f *.swp $(NAME)
	$(RM) -f *.swo $(NAME)
	$(RM) -f *.swn $(NAME)
oclean:
	$(RM) *.o

fclean:clean oclean
re: oclean all
